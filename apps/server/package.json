    "@ams-backend/auth": "*",
    "@ams-backend/db": "*"
  },
  "devDependencies": {
    "typescript": "^5.8.2",
    "@types/bun": "^1.2.6",
    "tsdown": "^0.16.5",
    "@ams-backend/config": "*"
  }
